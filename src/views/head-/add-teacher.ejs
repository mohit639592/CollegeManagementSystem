<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Teacher Management</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body { background:#f7f9fc; }
    .card { border-radius: 12px; }
    .required::after { content: " *"; color: #e03131; }
    .form-section { max-width: 900px; margin: 24px auto; }
  </style>
</head>

<body>
  <div class="container form-section">

    <!-- Add Teacher Form -->
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="card-title mb-3">Add Teacher</h3>

        <form id="teacherForm" action="/head/add-teacher" method="POST" novalidate>

          <div class="row g-3">

            <div class="col-md-6">
              <label class="form-label required">Name</label>
              <input type="text" class="form-control" name="name" required minlength="2">
            </div>

            <div class="col-md-6">
              <label class="form-label required">Email</label>
              <input type="email" class="form-control" name="email" required>
            </div>

            <div class="col-md-6">
              <label class="form-label required">Password</label>
              <input type="password" class="form-control" name="password" required minlength="6">
            </div>

            <div class="col-md-6">
              <label class="form-label required">ID (unique)</label>
              <input type="text" class="form-control" name="id" required>
            </div>

            <div class="col-md-6">
              <label class="form-label required">Class</label>
              <input type="text" class="form-control" name="class" required>
            </div>

            <div class="col-md-6">
              <label class="form-label required">Salary</label>
              <input type="text" class="form-control" name="salary" required>
            </div>

            <div class="col-md-6">
              <label class="form-label required">Contact No.</label>
              <input type="tel" class="form-control" name="contactNo" required>
            </div>

            <div class="col-md-6">
              <label class="form-label required">Subject</label>
              <input type="text" class="form-control" name="subject" required>
            </div>

            <div class="col-12">
              <label class="form-label required">Address</label>
              <textarea class="form-control" name="address" rows="2" required></textarea>
            </div>

            <div class="col-12 d-flex gap-2">
              <button type="submit" class="btn btn-primary">Save Teacher</button>
              <button type="reset" class="btn btn-outline-secondary">Reset</button>
            </div>

          </div>

        </form>
      </div>
    </div>

    <!-- Teachers List -->
    <div class="card shadow-sm mt-4">
      <div class="card-body">
        <h5 class="mb-3">Teachers List</h5>

        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
              </tr>
            </thead>

            <tbody>
              <% teachers.forEach(teacher => { %>
                <tr>
                  <td><%= teacher.name %></td>
                  <td><%= teacher.email %></td>
                  <td><%= teacher.subject %></td>
                </tr>
              <% }) %>
            </tbody>

          </table>
        </div>

      </div>
    </div>

  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
