<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Teacher Dashboard</title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/a81368914c.js" crossorigin="anonymous"></script>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    body {
      background: #f0f2f5;
    }

    nav {
      background: #2d3436;
      color: white;
      padding: 15px 35px;
      font-size: 22px;
      font-weight: 600;
      box-shadow: 0 3px 8px rgba(0,0,0,0.2);
    }

    .dashboard {
      display: grid;
      grid-template-columns: 250px 1fr;
    }

    /* Sidebar */
    .sidebar {
      background: #1e272e;
      height: 100vh;
      padding: 30px 20px;
      color: white;
    }
    .sidebar h3 {
      text-align: center;
      color: #00cec9;
      margin-bottom: 30px;
      font-size: 20px;
    }
    .sidebar ul li {
      list-style: none;
      margin: 18px 0;
    }
    .sidebar a {
      color: #dfe6e9;
      text-decoration: none;
      display: block;
      padding: 10px;
      border-radius: 8px;
      transition: 0.3s;
    }
    .sidebar a:hover {
      background: #00cec9;
      color: #2d3436;
    }

    /* Main Content */
    .main {
      padding: 40px;
    }

    .main h1 {
      font-size: 26px;
      margin-bottom: 20px;
      color: #2d3436;
    }

    /* Info Boxes */
    .info-boxes {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 35px;
    }

    .info-box {
      background: white;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 4px 14px rgba(0,0,0,0.08);
      transition: 0.3s;
    }

    .info-box:hover {
      transform: translateY(-4px);
    }

    .info-box h4 {
      font-size: 14px;
      color: #636e72;
      margin-bottom: 8px;
    }

    .info-box p {
      font-size: 17px;
      font-weight: 600;
      color: #2d3436;
    }

    /* Panels */
    .panels {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 20px;
    }

    .panel {
      background: white;
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 4px 14px rgba(0,0,0,0.08);
      text-align: center;
      transition: 0.3s;
    }
    .panel:hover {
      transform: translateY(-5px);
    }

    .panel i {
      font-size: 40px;
      color: #0984e3;
      margin-bottom: 15px;
    }

    .panel h4 {
      font-size: 18px;
      margin-bottom: 8px;
      font-weight: 600;
    }

    .panel p {
      color: #636e72;
      font-size: 16px;
    }
  </style>
</head>

<body>

  <nav>Teacher Dashboard</nav>

  <div class="dashboard">

    <!-- Sidebar -->
    <div class="sidebar">
      <h3>Teacher Menu</h3>
      <ul>
        <li><a href="#"><i class="fas fa-home"></i> Dashboard</a></li>
        <li><a href="/head/students"><i class="fas fa-users"></i> Students</a></li>
        <li><a href="#"><i class="fas fa-calendar-check"></i> Attendance</a></li>
        <li><a href="/teacher/profile?email=<%= teacher.email %>"><i class="fas fa-calendar-check"></i> My Profile</a></li>
        <!-- <li><a href="#"><i class="fas fa-file-alt"></i> Assignments</a></li> -->
        <li><a href="/head/timetable"><i class="fas fa-clock"></i> Timetable</a></li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="main">

      <h1>Welcome, <%= teacher.name %> üëã</h1>

      <!-- TOP INFORMATION BOXES -->
      <div class="info-boxes">
        <div class="info-box">
          <h4>Your Name</h4>
          <p><%= teacher.name %></p>
        </div>

        <div class="info-box">
          <h4>Email</h4>
          <p><%= teacher.email %></p>
        </div>

        <div class="info-box">
          <h4>Subject</h4>
          <p><%= teacher.subject %></p>
        </div>

        <div class="info-box">
          <h4>Class Assigned</h4>
          <p><%= teacher.class %></p>
        </div>

        <div class="info-box">
          <h4>Teacher ID</h4>
          <p><%= teacher.id %></p>
        </div>
      </div>

      <!-- Dashboard Panels -->
      <div class="panels">

        <div class="panel">
          <i class="fas fa-user-graduate"></i>
          <h4>Total Students</h4>
          <p><%= student.length %></p>
        </div>

        <div class="panel">
          <i class="fas fa-file-alt"></i>
          <h4>Assignments Submitted</h4>
          <p>30 / 45</p>
        </div>

        <div class="panel">
          <i class="fas fa-chart-line"></i>
          <h4>Performance</h4>
          <p>Excellent ‚≠ê</p>
        </div>

      </div>

    </div>

  </div>

</body>
</html>
